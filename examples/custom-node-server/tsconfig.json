{
  "include": [
    "./.react-router/types/**/*",
    "./app/**/*",
    "./server/**/*",
    "./server.js"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "checkJs": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["@rsbuild/core/types"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDirs": [".", "./.react-router/types"],
    "paths": {
      "~/*": ["./app/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
